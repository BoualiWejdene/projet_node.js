<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }
    
    header, footer {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 10px 0;
    }
    
    .container {
        width: 90%;
        max-width: 1200px;
        margin: 20px auto;
    }
    
    h1 {
        text-align: center;
        color: #333;
    }
    
    .user-info {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .user-info img {
        border-radius: 50%;
        border: 2px solid #007bff;
    }
    
    .candidates {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }
    
    .card {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 300px;
        padding: 20px;
        text-align: center;
    }
    
    .card img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        margin-bottom: 10px;
        margin-left: 35%;
    }
    
    .card h3 {
        margin: 10px 0 5px;
        color: #333;
    }
    
    .card p {
        color: #555;
        font-size: 14px;
        margin: 5px 0;
    }
    
    .card button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        margin-top: 10px;
    }
    
    .card button:hover {
        background-color: #0056b3;
    }
    
    .card a button {
        background-color: #28a745;
    }
    
    .card a button:hover {
        background-color: #1e7e34;
    }
    
</style>
<%- include('partials/header') %>
<body>
<div class="container">
    <div class="user-info">
        <img src="<%= user.photo %>" width="100" height="100">
        <h1><%= user.nom_user %> <%= user.prenom_user %></h1>
        <p><%= user.age %> ans</p>
    </div>

    <div class="candidates">
        <% candidats.forEach(Candidat => { %>
            <div class="card">
                <img src="<%= Candidat.photo %>" alt="Photo de <%= Candidat.nom_candidat %>">
                <h3><%= Candidat.nom_candidat %> <%= Candidat.prenom_candidat %></h3>
                <p><strong>Parti</strong> : <%= Candidat.parti %></p>
                <p><strong>Nombre de votes</strong>  : <%= Candidat.nbVotes %></p>
                <!-- <button type="button" >Voter</button> -->
                
               
                <a href="/candidat/<%= Candidat._id %>">
                    <button type="button">Consulter</button>
                </a>
            </div>
        <% }); %>
    </div>
</div>
</body>
<%- include('partials/footer') %>

