<%- include('partials/header') %>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: url("/image.png") no-repeat center center;
        background-size: cover;
        height: 100vh;
    }

    .alert {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        width: 90%;
        max-width: 600px;
    }
    #container {
    display: flex; /* Utilise Flexbox pour aligner les éléments horizontalement */
    gap: 20px; /* Ajoute un espacement entre les deux sections */
    margin-top: 20px; /* Ajoute un peu d'espace au-dessus */
  }
  #commentList {
    flex: 1; /* Prend 2 parts de l'espace disponible */
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #ffffff;
  }
    .candidate-container {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 500px;
        padding: 20px;
        text-align: center;
        flex: 1;
    }
    @media (max-width: 768px) {
    #container {
      flex-direction: column; /* Aligne verticalement les sections */
    }

    .candidate-container, #commentList {
      max-width: 100%; /* Prend toute la largeur sur petits écrans */
    }
  }
    .candidate-container img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .candidate-container h3 {
        margin: 10px 0 5px;
        color: #333;
    }

    .candidate-container p {
        color: #555;
        font-size: 14px;
        margin: 5px 0;
    }

    .candidate-container button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        margin-top: 10px;
    }

    .candidate-container button:hover {
        background-color: #0056b3;
    }

    .btn-success:hover {
        background-color: #218838; /* Couleur de fond plus sombre au survol */
        transform: scale(1.05); /* Légère animation d'agrandissement */
    }

    .btn-success:active {
        background-color: #1e7e34; /* Couleur de fond lors du clic */
        transform: scale(1); /* Réduction de l'effet d'agrandissement */
    }

    .btn{
        margin-left: 90px;
    }

    button:disabled {
    background-color: #ccc;
    cursor: not-allowed;
}

</style>
<body>

    <% if (alertMessage) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= alertMessage %>
        <button type="button" class="btn-close btn-close-warning" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <!-- Contenu de la carte candidat -->
     <div id="container">
    <div class="candidate-container">
        <img src="<%= candidat.photo %>" alt="Photo de <%= candidat.nom_candidat %>">
        <h3><%= candidat.nom_candidat %> <%= candidat.prenom_candidat %> </h3>
        <p><%= candidat.bioagraphie %></p>
        <p><strong>De la parti</strong>: <%= candidat.parti %></p>
        <p><strong>Programme</strong>: <%= candidat.programme %></p>
        <p><%= candidat.nbVotes %> votes</p>

        <form action="/vote/<%= candidat._id %>" method="POST">
            <input type="hidden" name="userId" value="<%= user._id %>">
            <button 
                type="submit" 
                class="btn btn-success d-flex align-items-center gap-2" 
                <% if (hasVoted) { %> disabled <% } %>>
                <i class="bi bi-hand-thumbs-up"></i> Voter pour ce candidat
            </button>
        </form>
        

        <!-- Bouton pour revenir au profil de l'utilisateur -->
        <button onclick="window.location.href='/profile/<%= user._id %>'" class="back-button">Retour</button>
        
      
    </div>
    <div id="commentList">
        <h3>Commentaires</h3>
        <% commentaires.forEach(commentaire => { %>
            <p><strong><%= commentaire.userDetails.nom_user %> <%= commentaire.userDetails.prenom_user %>:</strong> <%= commentaire.contenue %></p>
          <% }); %>
        <!--<% commentaires.forEach(comment => { %>
            <p><strong><%= comment.userId %>:</strong> <%= comment.contenue %></p>
        <% }) %>
          Formulaire pour Ajouter commentaire -->

         <form action="/comment/<%= candidat._id %>" method="POST">
            <div class="input-group mb-3">
                <input type="text" name="contenue" id="contenue" class="form-control" placeholder="Ajouter un commentaire" style="height: 40px;margin-top: 10px;">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary" style="margin-left: 0px;margin-top: 10px;">
                        <i class="fa-solid fa-pencil"></i>
                    </button>
                </div>
            </div>
        </form>
        
    </div>
     
</div>
    <script>
     
    const candidatId = "<%= candidat._id %>"; 
    const contenue = document.getElementById('contenue').value; 

    try {
        const response = await fetch(`/comment/${candidatId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ contenue }) 
        });

        const result = await response.json();
        if (response.ok) {
            const commentList = document.getElementById('commentList');
            const newComment = document.createElement('p');
            newComment.innerHTML = `<strong>${result.comment.userId}:</strong> ${result.comment.contenue}`;
            commentList.appendChild(newComment);
            document.getElementById('contenue').value = '';
        } else {
            alert(result.error || "Erreur lors de l'ajout du commentaire");
        }
    } catch (err) {
        console.error("Erreur :", err);
        alert("Une erreur est survenue. Veuillez réessayer.");
    }

    document.querySelectorAll('form').forEach(form => {
        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(form);
            const response = await fetch(form.action, {
                method: 'POST',
                body: formData,
            });

            if (response.ok) {
                // Désactiver tous les boutons
                document.querySelectorAll('button').forEach(button => {
                    button.disabled = true;
                });

                alert("Votre vote a été enregistré !");
            } else {
                const result = await response.json();
                alert(result.error || "Erreur lors du vote");
            }
        });
    });
    </script>
</body>

<%- include('partials/footer') %>
